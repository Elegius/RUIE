{
  "name": "ruie",
  "version": "1.0.0",
  "description": "RSI Launcher UI Editor - Desktop Application",
  "main": "electron/src/main.js",
  "author": "Elegius",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --development",
    "build": "electron-builder",
    "build:win": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"$env:CSC_IDENTITY_AUTO_DISCOVERY='false'; $env:ELECTRON_BUILDER_CACHE = (Join-Path $PWD '.electron-builder-cache'); if (!(Test-Path $env:ELECTRON_BUILDER_CACHE)) { New-Item -ItemType Directory -Path $env:ELECTRON_BUILDER_CACHE | Out-Null }; electron-builder --win --publish never\"",
    "build:win-portable": "electron-builder --win portable --publish never",
    "pack": "electron-builder --dir",
    "prestart": "npm run ensure-python-server",
    "ensure-python-server": "node electron/scripts/check-server.js"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.elegius.ruie",
    "productName": "RUIE",
    "icon": "icon.ico",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "electron/src/**/*",
      "public/**/*",
      "server.py",
      "requirements.txt",
      "assets/**/*",
      "node_modules/**/*",
      "icon.ico"
    ],
    "win": {
      "icon": "icon.ico",
      "signAndEditExecutable": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RUIE"
    }
  }
}
